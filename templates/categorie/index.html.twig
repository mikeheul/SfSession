{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}

    <h1 class="h1 mb-3 mt-3">Catégorie</h1>

    <p><a href="{{ path('add_categorie') }}" class="btn btn-success">Ajouter une catégorie</a></p>
    
    <table class="table table-striped table-dark">
        <thead class="bg-dark text-light">
            <tr>
                <th>Catégorie</th>
                <th>Modules</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td><a href="{{ path('show_categorie', {'id': categorie.id}) }}">{{ categorie }}</a></td>
                <td>{{ categorie.formModules | length }}</td>
                <td>
                    <a href="{{ path('edit_categorie', {'id': categorie.id}) }}"><i class="text-warning bi bi-pencil-square"></i></a>
                    <a href=""><i class="text-danger bi bi-trash"></i></a>
                </td>
            </tr>        
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
