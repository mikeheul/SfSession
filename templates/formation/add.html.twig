{% extends 'base.html.twig' %}

{% block title %}Ajouter / Modifier une formation{% endblock %}

{% block body %}

    {% if editMode %}
        <h1 class="h1 mb-3 mt-3">Modifier une formation</h1>
    {% else %}
        <h1 class="h1 mb-3 mt-3">Ajouter une formation</h1>
    {% endif %}

    {{ form_start(formFormation) }}
        <div class="row">
            {{ form_row(formFormation.intitule) }}
        </div>
        <div class="row">
            {{ form_row(formFormation.description) }}
        </div>
    {{ form_end(formFormation) }}

{% endblock %}